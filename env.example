# Linear Webhook Handler - 环境变量配置

# ===================
# 必需配置
# ===================

# DeepSeek API 配置 (Aider 使用)
OPENAI_API_KEY=your_deepseek_api_key_here

# ===================
# 数据库配置
# ===================

# SQLite (默认)
DATABASE_URL=sqlite:///./linear_webhook.db

# PostgreSQL (可选)
# DATABASE_URL=postgresql://linear_user:linear_password@postgres:5432/linear_webhook

# ===================
# 服务器配置
# ===================

HOST=0.0.0.0
PORT=8000
RELOAD=false
LOG_LEVEL=info

# ===================
# Aider 配置
# ===================

# DeepSeek API 配置
AIDER_OPENAI_API_BASE=https://api.deepseek.com/v1
AIDER_OPENAI_API_KEY=your_deepseek_api_key_here
AIDER_OPENAI_MODEL=deepseek-chat

# Aider 工作配置
AIDER_WORK_DIR=/app
AIDER_EDITOR=code
AIDER_AUTO_COMMITS=true
AIDER_DARK_MODE=false
AIDER_YES=false
AIDER_SAFE_MODE=true

# ===================
# 可选：其他 AI 模型
# ===================

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini
GOOGLE_API_KEY=your_google_api_key_here

# Cohere
COHERE_API_KEY=your_cohere_api_key_here

# ===================
# 数据库配置 (PostgreSQL)
# ===================

POSTGRES_PASSWORD=linear_password

# ===================
# 安全配置
# ===================

# Linear Webhook 签名验证密钥
LINEAR_WEBHOOK_SECRET=your_linear_webhook_secret_here

# JWT 密钥 (如果需要认证)
SECRET_KEY=your_secret_key_here
